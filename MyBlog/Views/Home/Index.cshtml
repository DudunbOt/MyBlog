@model IEnumerable<mdlMyBlog.Blog>
@{
    ViewBag.Title = "Home Page";
    ViewBag.ContentTitle = "My Blog";
    ViewBag.ContentSubtitle = "A Blog For Me";
}

<div class="col-md-10 col-lg-8 col-xl-7">
    @{
        if (Session["username"] != null)
        {
            @Html.ActionLink("Add New Post", "Create", new { controller = "Blog" }, htmlAttributes: new { @class = "btn btn-primary text-uppercase" });
        }
    }


    @if (ViewBag.count == 0)
    {
        <p class="text-center text-muted fst-italic">No Content</p>
    }

    @foreach (var item in Model)
    {

        <div class="post-preview">
            <a href="Blog/Details/@Html.DisplayFor(modelItem => item.id)">
                <h2 class="post-title">@Html.DisplayFor(modelItem => item.Title)</h2>
                <h3 class="post-subtitle">@Html.DisplayFor(modelItem => item.TitleDesc)</h3>
            </a>
            <p class="post-meta">
                Posted by
                <a href="#!">@Html.DisplayFor(modelItem => item.Author)</a>
                on @Html.DisplayFor(modelItem => item.CreatedAt)
            </p>
        </div>
    }
    <!-- Divider-->
    <hr class="my-4" />
</div>
